#!/usr/bin/env sh
set -o errexit -o nounset -o xtrace

if ! which fzf >/dev/null 2>&1; then
    tmux new-window
    exit
fi

dir=$(
    {
        echo "${PWD}"
        echo ~/repos
        echo ~
        find ~/repos/ -type d -name .git -exec dirname '{}' ';' 2>/dev/null &
    } | fzf
)
cd "${dir}" || true
tmux rename-window "$(basename "${dir}")"
tmux send-keys "cd ${dir} && nvim" Enter
