#!/usr/bin/env sh
set -o errexit -o nounset -o xtrace

tree -aifn --noreport -I ".git" --dirsfirst --sort name --gitignore . "${@}" |
    awk -F '/' '
        $0 != "." {
            for (i = 0; i < NF - 2; i++) {
                printf "  "
            }
            printf "- " "[" $NF "]" "(" $0 ")"
            printf "\n"
        }
    '
